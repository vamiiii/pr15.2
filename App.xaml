<Application x:Class="pr15.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:pr15"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml"></ResourceDictionary>

                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Cyan" SecondaryColor="Cyan"/>
                <ResourceDictionary>
                    
                    <SolidColorBrush x:Key="MaterialDesign.Brush.Primary" Color="#00C4B4"/>
                    <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary" Color="#00b4c4"/>
                    <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Foreground" Color="#000"/>
                    
                    <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary.Foreground" Color="#fff" />

                    
                </ResourceDictionary>
                <ResourceDictionary>
                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                        <Setter Property="AutomationProperties.Name" Value="" />


                        <Style.Triggers>
                           
                            

                            
                        </Style.Triggers>

                    </Style>
                    <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
                        <Setter Property="AutomationProperties.Name" Value="" />
                    </Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                        <Setter Property="Background" Value="#00C4B4"></Setter>
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="Margin" Value="2"></Setter>
                        <Style.Triggers>
                           
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00b4c4"/>
                                
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00b4c4"/>

                            </Trigger>


                        </Style.Triggers>
                    </Style>

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
