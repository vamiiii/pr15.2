<Page x:Class="pr15.Pages.AddTagToProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление продукта"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label FontSize="16" Grid.Row="0">Страница тэгов у товаров</Label>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Click="Button_Click_1" >Назад</Button>
            <Button Click="Button_Click" >Удалить</Button>


        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Label>Тэг</Label>
                <ComboBox 
                          DisplayMemberPath="Name" 
SelectedItem="{Binding current1}" ItemsSource="{Binding service.Users}" x:Name="c1"/>

                
                
                <Button Click="Button_Click_2">Добавить</Button>
            </StackPanel>
            <ListView Grid.Column="0"
                  
ItemsSource="{Binding group.Tags}"

SelectedItem="{Binding current}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            

                            <TextBlock>
<Run Text="Наименование: "/>
<Run Text="{Binding Name}"/>

                            </TextBlock>

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

    </Grid>
</Page>
