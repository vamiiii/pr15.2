<Page x:Class="pr15.Pages.TagPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Тэг" DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label FontSize="16" Grid.Row="0">Страница тэгов</Label>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Click="Button_Click">Назад</Button>
            <Button Click="Button_Click_1">Добавить</Button>
            <Button Click="Button_Click_2" >Удалить</Button>
        </StackPanel>
        <ListView Grid.Row="2"
                  MouseDoubleClick="ListView_MouseDoubleClick"
ItemsSource="{Binding service.Users}"

SelectedItem="{Binding current}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>


                        <TextBlock>
<Run Text="Наименование: "/>
<Run Text="{Binding Name}"/>

                        </TextBlock>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
